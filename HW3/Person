package com.company;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;

public class Person {
    private String firstName, lastName;
    private int birthYear;
    static int currentYear = 2019;

    public Person(){}
    public Person (String firstName, String lastName, int birthYear ){
        this.firstName = firstName;
        this.lastName = lastName;
        this.birthYear = birthYear;
    }

    public String getFirstName() {
        return firstName;
    }
    public void setFirstName(String firstName) {
        this.firstName = firstName;
    }
    public String getLastName() {
        return lastName;
    }
    public void setLastName(String lastName) {
        this.lastName = lastName;
    }
    public int getBirthYear() {
        return birthYear;
    }
    public void setBirthYear(int birthYear) {
        this.birthYear = birthYear;
    }

    public int getAge(){
        return currentYear - birthYear;
    }

    public void input() throws IOException {
        BufferedReader buf = new BufferedReader(new InputStreamReader(System.in));
        System.out.println("Enter new person's name, surname and birthyear");
        String name = buf.readLine();
        String surname = buf.readLine();
        int birthYear = Integer.parseInt(buf.readLine());
        setFirstName(name);
        setLastName(surname);
        setBirthYear(birthYear);
    }
    public void output(){
        System.out.println("Person's name: " + getFirstName() + "| Persons surname: " + getLastName() + "| Person's age: " + getAge());
    }

    public void changeName (String firstName, String lastName){
        System.out.print("Last name was changed to: ");
        this.firstName = firstName;
        this.lastName = lastName;
    }
  /*  public String toString(){
        return ("Firstname: " + firstName + " Lastname: " + lastName + " Age: " + getAge());
    }*/

}